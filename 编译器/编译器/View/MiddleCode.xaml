<mui:ModernWindow x:Class="编译器.View.MiddleCode"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
                  mc:Ignorable="d" 
                  d:DesignHeight="300" d:DesignWidth="300"
                  Width="840" Height="680" MinWidth="840" MinHeight="680"
                  Title="查看中间代码"
                  Style="{StaticResource BlankWindow}">
    <ScrollViewer>
        <avalonEdit:TextEditor PreviewMouseWheel="CodeEditor_PreviewMouseWheel"  FontSize="16" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Name="CodeEditor"  Grid.Row="1" Grid.Column="0" FontFamily="nsimsun"/>
    </ScrollViewer>
</mui:ModernWindow>
